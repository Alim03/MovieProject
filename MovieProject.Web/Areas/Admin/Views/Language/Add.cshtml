@model MovieProject.Domain.ViewModels.Movie.AddInfoViewModel
@{
    ViewData["Title"] = "Admin Home Page";
}



<div class="container mt-5">
   <div class="row">
      <div class="col-md-6 offset-md-3">
         <div class="card">
            <div class="card-body">
               <h1 class="card-title text-center mb-4">Language</h1>
               <form asp-action="Add" method="post">
                  <div class="form-group pb-2">
                     <input asp-for="title" class="form-control" id="title" placeholder="Enter Language" />
                     <span asp-validation-for="title"></span>
                  </div>
                  <div class="form-group text-center">
                     <input type="submit" class="btn btn-primary btn-lg btn-block" value="Save" />
                  </div>
               </form>
            </div>
         </div>
      </div>
   </div>
</div>